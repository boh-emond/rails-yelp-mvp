<p><strong>Restaurant</strong></p>

<ul class="list-group">
  <li class="list-group-item"> <%= @restaurant.name %></li>
  <li class="list-group-item"><%= @restaurant.address %></li>
</ul>

<ul class="list-group">
  <% @restaurant.reviews.each do |review| %>
    <li class="list-group-item"><%= review.content %> - <%= review.rating %></li>
  <% end %>
</ul>


<%=link_to "back", restaurants_path%>
<%=link_to "add a review",  new_restaurant_review_path(@restaurant)%>
